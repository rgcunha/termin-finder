{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "pretty": true,
    "inlineSourceMap": true,
    "target": "es6",
    "outDir": "./dist",
    "baseUrl": "./src",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*.ts", "typings/**/*.d.ts", "bin/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules"]
}
