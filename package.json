{
  "name": "termin-finder",
  "version": "0.0.1",
  "description": "Termin Finder",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc -p tsconfig.release.json",
    "format": "prettier --write .",
    "lint": "tsc --noEmit && eslint . --max-warnings=0 --ext .ts",
    "prod": "nodemon -r dotenv/config -r source-map-support/register ./dist/index.js",
    "tunnel": "lt --port 3001 --subdomain rgcunha-termin-finder",
    "start": "nodemon -r dotenv/config --watch 'src/**/*.ts' --ignore 'src/**/*.test.ts' --exec 'ts-node' --files src/index.ts",
    "test": "LOG_LEVEL=error jest",
    "repl": "ts-node -r dotenv/config --files ./bin/repl.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "+(src|test)/**/*.ts": "eslint --max-warnings=0"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-winston": "^4.0.5",
    "ioredis": "^4.27.3",
    "localtunnel": "^2.0.1",
    "nodemon": "^2.0.7",
    "source-map-support": "^0.5.19",
    "telegraf": "^4.3.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/express": "^4.17.11",
    "@types/ioredis": "^4.26.4",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.45",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^7.19.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "4.3.8",
    "jest": "^26.6.3",
    "jest-extended": "^0.11.5",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "prettier-plugin-organize-imports": "^1.1.1",
    "prettier-plugin-packagejson": "^2.2.9",
    "ts-jest": "^26.5.3",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": ">=14.15.4 <15",
    "npm": ">=6.14.8 <7"
  }
}
